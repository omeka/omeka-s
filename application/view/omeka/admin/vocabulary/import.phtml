<script>
const uploadField = $('#file-upload').closest('.field');
const urlField = $('#file-url').closest('.field');
urlField.hide();
$('.import-type-select').on('change', function(e) {
    const thisRadio = $(this);
    if ('upload' === thisRadio.val()) {
        uploadField.show();
        urlField.hide();
    } else if ('url' === thisRadio.val()) {
        uploadField.hide();
        urlField.show();
    }
});
</script>
