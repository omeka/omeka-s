                <?php echo $translate('Title'); ?>
            </th>
            <?php echo $this->columns()->renderHeaderRow('media'); ?>
        </tr>
    </thead>
    <tbody>
        <?php foreach ($medias as $media): ?>
        <?php $userIsAllowedUpdate = $media->userIsAllowed('update'); ?>
        <?php $userIsAllowedDelete = $media->userIsAllowed('delete'); ?>
        <tr>
            <td>
                <?php if ($userIsAllowedBatchUpdate || $userIsAllowedBatchDelete): ?>
                <input type="checkbox" name="resource_ids[]" value="<?php echo $media->id(); ?>"  aria-label="<?php echo $translate('Select media'); ?>" <?php if (!($userIsAllowedUpdate || $userIsAllowedDelete)): ?> disabled<?php endif; ?>>
                <?php endif; ?>
